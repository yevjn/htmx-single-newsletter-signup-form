{
  "name": "whitesmoke-vercel-test",
  "type": "module",
  "scripts": {
    "build-tasks": "node scripts/build-tasks.js",
    "build": "rimraf dist && npm run build-tasks && esbuild src/main.tsx --platform=node --packages=external --format=esm --bundle --outdir=dist",
    "start": "node dist/main.js",
    "dev:build-watch": "esbuild src/main.tsx --platform=node --packages=external --format=esm --bundle --outdir=dist --watch --sourcemap",
    "dev:serve-watch": "cross-env NODE_ENV=development nodemon --watch dist/refresh.txt --watch dist/paths.js --watch dist/main.js",
    "dev": "npm run build && npm-run-all --parallel dev:*"
  },
  "dependencies": {
    "@hono/node-server": "^1.1.1",
    "dotenv": "^16.3.1",
    "hono": "^3.5.5",
    "picocolors": "^1.0.0",
    "whitesmoke": "^0.1.3"
  },
  "devDependencies": {
    "@types/node": "^20.5.7",
    "cross-env": "^7.0.3",
    "esbuild": "^0.19.2",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
